{
    "root": true,
    "parser": "babel-eslint",
    "env": {
        "browser": true,
        "es6": true,
        "node": true,
        "jest": true
    },
    "plugins": ["prettier"],
    "extends": ["eslint:recommended", "airbnb", "prettier"],
    "globals": {},
    "parserOptions": {
        "sourceType": "module",
        "ecmaFeatures": {
            "ecmaVersion": 2018,
            "classes": true
        }
    },
    "rules": {
        "prettier/prettier": ["error"],
        "no-multiple-empty-lines": ["error", { "max": 1, "maxBOF": 0 }],
        "react/jsx-filename-extension": 0,
        "react/jsx-indent": 0,
        "import/no-extraneous-dependencies": 0,
        "global-require": 0
    }
}
